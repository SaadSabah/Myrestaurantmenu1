<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/menu"
    android:padding="5dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/Restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="71dp"
        android:layout_gravity="center"
        android:text="Welcome to XYZ Restaurant"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/Restaurant_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact : fastfood@gmail.com"
        android:textStyle="bold"
        android:layout_gravity="right"/>

    <TextView
        android:id="@+id/Restaurant_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Mobil number : 079012345"
        android:layout_gravity="right"/>

    <TextView
        android:id="@+id/Restaurant_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Malmö, övagn 4A 21325"
        android:textStyle="bold"
        android:layout_gravity="right"/>

    <ImageView
        android:id="@+id/Restaurant_image"
        android:layout_width="wrap_content"
        android:layout_height="293dp"
        android:src="@drawable/arabic"
        android:layout_gravity="center"/>





<Button
    android:id="@+id/Main1"
    android:layout_width="125dp"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:text="Main Meals"/>

    <Button
        android:id="@+id/Appz"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Appetizer" />

    <Button
        android:id="@+id/Dess"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="desserts" />




</LinearLayout>


